---
export interface Props {
  src: string;
  title?: string;
  caption?: string;
}

const { src, title = "Video", caption } = Astro.props;

// Extract video ID from YouTube URL
const getYouTubeVideoId = (url: string) => {
  const match = url.match(/(?:youtube\.com\/(?:[^\/]+\/.+\/|(?:v|e(?:mbed)?)\/|.*[?&]v=)|youtu\.be\/)([^"&?\/\s]{11})/);
  return match ? match[1] : null;
};

const videoId = getYouTubeVideoId(src);
const embedUrl = videoId ? `https://www.youtube.com/embed/${videoId}` : src;
---

<div class="comp-video">
  <iframe
    src={embedUrl}
    title={title}
    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
    referrerpolicy="strict-origin-when-cross-origin"
    allowfullscreen>
  </iframe>
  {caption && <p class="video-caption">{caption}</p>}
</div>

<style>
  .comp-video {
    margin: 80px 0;
    position: relative;
    width: 100%;
    padding-top: 56.25%; /* 16:9 aspect ratio */
    background: #0a0a0a;
    border: 1px solid #333;
    border-radius: 8px;
    overflow: hidden;
  }

  .comp-video iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: none;
  }

  .video-caption {
    margin-top: 16px;
    font-size: 14px;
    color: #666;
    text-align: center;
    font-style: italic;
    position: absolute;
    bottom: -40px;
    left: 0;
    right: 0;
  }

  .comp-video:has(.video-caption) {
    margin-bottom: 120px;
  }
</style>