---
import CompCarousel from './CompCarousel.astro';

export interface Props {
  leftImages: Array<{
    src: string;
    alt: string;
    caption?: string;
  }>;
  rightImages: Array<{
    src: string;
    alt: string;
    caption?: string;
    embedded?: {
      type: 'carousel';
      carouselId: string;
      images: Array<{
        src: string;
        alt: string;
      }>;
    };
  }>;
}

const { leftImages, rightImages } = Astro.props;
---

<div class="comp-two-column">
  <div class="column-left">
    {leftImages.map((image) => (
      <div class="column-image">
        <img src={image.src} alt={image.alt} />
        {image.caption && <p class="image-caption">{image.caption}</p>}
      </div>
    ))}
  </div>

  <div class="column-right">
    {rightImages.map((image) => (
      <div class="column-image">
        <img src={image.src} alt={image.alt} />
        {image.caption && <p class="image-caption">{image.caption}</p>}
        {image.embedded && image.embedded.type === 'carousel' && (
          <div class="embedded-carousel">
            <CompCarousel
              id={image.embedded.carouselId}
              images={image.embedded.images}
            />
          </div>
        )}
      </div>
    ))}
  </div>
</div>

<style>
  .comp-two-column {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 40px;
    margin: 80px 0;
  }

  .column-left,
  .column-right {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .column-image {
    border: 1px solid #333;
    border-radius: 8px;
    overflow: hidden;
    background: #0a0a0a;
  }

  .column-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .image-caption {
    margin-top: 16px;
    font-size: 14px;
    color: #666;
    text-align: center;
    font-style: italic;
    padding: 0 16px 16px;
  }

  .embedded-carousel {
    margin-top: 16px;
    padding: 16px;
  }

  @media (max-width: 768px) {
    .comp-two-column {
      grid-template-columns: 1fr;
    }
  }
</style>