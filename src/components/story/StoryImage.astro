---
export interface Props {
  src?: string;
  alt?: string;
  caption?: string;
  size?: 'default' | 'medium' | 'small';
  container?: 'default' | 'narrow' | 'wide';
  margin?: 'default' | 'large';
  placeholder?: string;
}

const { 
  src, 
  alt = '', 
  caption, 
  size = 'default', 
  container = 'default', 
  margin = 'default',
  placeholder = 'Image placeholder'
} = Astro.props;

const heightClass = size === 'medium' ? 'medium' : size === 'small' ? 'small' : '';
---

<div class={`story-container ${container === 'narrow' ? 'narrow' : container === 'wide' ? 'wide' : ''}`}>
  <div class={`comp-image-single ${margin === 'large' ? 'large-margin' : ''}`}>
    <div class={`image-frame ${heightClass}`}>
      {src ? (
        <img src={src} alt={alt} class="w-full h-full object-cover rounded-lg" />
      ) : (
        <span class="placeholder-text">{placeholder}</span>
      )}
    </div>
    {caption && <p class="image-caption">{caption}</p>}
  </div>
</div>

<style>
  .story-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 60px;
  }

  .story-container.narrow {
    max-width: 800px;
  }

  .story-container.wide {
    max-width: 1400px;
  }

  .comp-image-single {
    margin-bottom: 80px;
  }

  .comp-image-single.large-margin {
    margin-bottom: 120px;
  }

  .image-frame {
    width: 100%;
    height: 600px;
    background: #0a0a0a;
    border: 1px solid #1a1a1a;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #666666;
    font-size: 14px;
    margin-bottom: 20px;
    overflow: hidden;
  }

  .image-frame.medium {
    height: 400px;
  }

  .image-frame.small {
    height: 300px;
  }

  .placeholder-text {
    color: #666666;
    font-size: 14px;
  }

  .image-caption {
    font-size: 12px;
    color: #666666;
    text-align: center;
    letter-spacing: 0.3px;
    line-height: 1.5;
  }

  @media (max-width: 768px) {
    .story-container {
      padding: 0 30px;
    }
  }
</style>