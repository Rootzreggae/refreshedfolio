---
export interface Props {
  text: string;
  author: string;
}

const { text, author } = Astro.props;
---

<div class="comp-quote">
  <p class="quote-text">{text}</p>
  <p class="quote-author">â€” {author}</p>
</div>

<style>
  .comp-quote {
    margin: 80px 0;
    padding: 40px;
    background: #0f0f0f;
    border-left: 4px solid #4a9eff;
    position: relative;
  }

  .comp-quote::before {
    content: '"';
    position: absolute;
    top: 20px;
    left: 20px;
    font-size: 60px;
    color: #4a9eff;
    opacity: 0.2;
  }

  .quote-text {
    font-size: 20px;
    line-height: 1.6;
    color: #e5e5e5;
    font-style: italic;
    margin-bottom: 16px;
  }

  .quote-author {
    font-size: 14px;
    color: #888;
    text-align: right;
  }
</style>