---
export interface Props {
  src: string;
  alt: string;
  caption?: string;
  size?: 'small' | 'medium' | 'large' | 'full';
  alignment?: 'left' | 'center' | 'right';
  spacing?: 'tight' | 'normal' | 'loose';
  borderRadius?: 'none' | 'small' | 'medium' | 'large';
  showBorder?: boolean;
}

const {
  src,
  alt,
  caption,
  size = 'medium',
  alignment = 'center',
  spacing = 'normal',
  borderRadius = 'medium',
  showBorder = true
} = Astro.props;
---

<figure class={`comp-image-single comp-image-single--${size} comp-image-single--${alignment} comp-image-single--${spacing}`}>
  <img
    src={src}
    alt={alt}
    loading="lazy"
    class={`comp-image-single__image comp-image-single__image--${borderRadius}`}
    class:list={{ 'comp-image-single__image--border': showBorder }}
  />
  {caption && (
    <figcaption class="comp-image-single__caption body-sm">
      {caption}
    </figcaption>
  )}
</figure>

<style>
  .comp-image-single {
    margin: var(--space-20) 0;
    text-align: center;
  }

  .comp-image-single--tight {
    margin: var(--space-16) 0;
  }

  .comp-image-single--loose {
    margin: var(--space-24) 0;
  }

  .comp-image-single--left {
    text-align: left;
  }

  .comp-image-single--right {
    text-align: right;
  }

  .comp-image-single__image {
    width: 100%;
    height: auto;
    display: block;
    background: var(--color-bg-secondary);
  }

  .comp-image-single__image--border {
    border: 1px solid var(--color-border-primary);
  }

  .comp-image-single__image--none {
    border-radius: 0;
  }

  .comp-image-single__image--small {
    border-radius: 4px;
  }

  .comp-image-single__image--medium {
    border-radius: 8px;
  }

  .comp-image-single__image--large {
    border-radius: 16px;
  }

  .comp-image-single--small .comp-image-single__image {
    max-width: 25rem;
    margin: 0 auto;
  }

  .comp-image-single--medium .comp-image-single__image {
    max-width: 37.5rem;
    margin: 0 auto;
  }

  .comp-image-single--large .comp-image-single__image {
    max-width: 50rem;
    margin: 0 auto;
  }

  .comp-image-single--full .comp-image-single__image {
    max-width: 100%;
  }

  .comp-image-single--left .comp-image-single__image {
    margin-left: 0;
  }

  .comp-image-single--right .comp-image-single__image {
    margin-right: 0;
  }

  .comp-image-single__caption {
    margin-top: var(--space-4);
    color: var(--color-text-tertiary);
    line-height: var(--line-height-normal);
    text-align: center;
    font-style: italic;
  }

  .comp-image-single--left .comp-image-single__caption {
    text-align: left;
  }

  .comp-image-single--right .comp-image-single__caption {
    text-align: right;
  }

  /* Responsive adjustments */
  @media (max-width: 767px) {
    .comp-image-single--small .comp-image-single__image,
    .comp-image-single--medium .comp-image-single__image {
      max-width: 100%;
    }

    .comp-image-single--left,
    .comp-image-single--right {
      text-align: center;
    }

    .comp-image-single--left .comp-image-single__image,
    .comp-image-single--right .comp-image-single__image {
      margin: 0 auto;
    }

    .comp-image-single--left .comp-image-single__caption,
    .comp-image-single--right .comp-image-single__caption {
      text-align: center;
    }
  }
</style>